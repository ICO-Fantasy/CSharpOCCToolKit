<Window
  x:Class="TestWPF.TestMainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:TestWPF"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="testMainWindow"
  Width="800"
  Height="450"
  mc:Ignorable="d">
  <Window.DataContext>
    <local:TestMainWindowViewModel />
  </Window.DataContext>

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="7*" />
      <ColumnDefinition Width="4" />
      <ColumnDefinition Width="3*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition />
    </Grid.RowDefinitions>

    <Grid
      x:Name="canvas"
      Grid.Column="0"
      HorizontalAlignment="Stretch"
      Background="Transparent">
      <Grid VerticalAlignment="Stretch">
        <Button
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          Background="Green" />
      </Grid>
    </Grid>
    <GridSplitter Grid.Column="1" />
    <StackPanel Grid.Column="2">
      <StackPanel Orientation="Horizontal">
        <Label Content="H Size：" />
        <TextBox Text="{Binding HSize}" />
      </StackPanel>
      <StackPanel Orientation="Horizontal">
        <Label Content="V Size：" />
        <TextBox Text="{Binding VSize}" />
      </StackPanel>
      <Button Click="Button_Click" Content="计算" />
      <StackPanel Orientation="Horizontal">
        <Label Content="H：" />
        <TextBox Text="{Binding H}" />
        <Label Content="V：" />
        <TextBox Text="{Binding V}" />
      </StackPanel>
    </StackPanel>
  </Grid>
</Window>
