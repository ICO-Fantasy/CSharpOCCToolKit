<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<!-- log4net 配置节 -->
	<log4net>
		<!-- 文件日志附加器: 将日志输出到文件 -->
		<appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
			<!-- 日志文件的路径和名称 -->
			<file value="logs\application.log" />
			<!-- 是否追加到现有文件 -->
			<appendToFile value="true" />
			<!-- 滚动日志文件的方式，使用复合规则(按大小和日期滚动) -->
			<rollingStyle value="Composite" />
			<!-- 保留的最大日志备份数 -->
			<maxSizeRollBackups value="10" />
			<!-- 最大日志文件大小，超过该大小会创建新文件 -->
			<maximumFileSize value="1MB" />
			<!-- 是否保持文件名不变 (不添加日期后缀) -->
			<staticLogFileName value="true" />
			<!-- 日期格式的模式，用于日志文件名中 -->
			<datePattern value="yyyyMMdd" />
			<!-- 是否保留日志文件名的扩展名 (.log) -->
			<preserveLogFileNameExtension value="true" />
			<!-- 滚动方向: 1 表示向前滚动 -->
			<countDirection value="1" />
			<!-- 日志格式 -->
			<layout type="log4net.Layout.PatternLayout">
				<!-- 日志输出的格式定义 -->
				<conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
			</layout>
		</appender>

		<!-- 调试输出附加器: 将日志输出到调试窗口 (如 Visual Studio 输出窗口) -->
		<appender name="DebugAppender" type="log4net.Appender.DebugAppender">
			<!-- 日志格式 -->
			<layout type="log4net.Layout.PatternLayout">
				<!-- 日志输出的格式定义 -->
				<conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
			</layout>
		</appender>

		<!-- 控制台输出附加器: 将日志输出到控制台 -->
		<appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
			<!-- 日志格式 -->
			<layout type="log4net.Layout.PatternLayout">
				<!-- 日志输出的格式定义 -->
				<conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
			</layout>
		</appender>

		<!-- 根记录器: 这是默认的记录器，它会捕获所有日志输出 -->
		<root>
			<!-- 设置日志级别，ALL 表示所有级别的日志都将被捕获 -->
			<level value="ALL" />
			<!-- 关联的日志附加器: 文件日志 -->
			<appender-ref ref="RollingFileAppender" />
			<!-- 关联的日志附加器: 调试日志 -->
			<appender-ref ref="DebugAppender" />
			<!-- 关联的日志附加器: 控制台日志 -->
			<appender-ref ref="ConsoleAppender" />
		</root>

		<!-- 特定命名空间或类的记录器: 这里定义了一个专门用于 "YourNamespace.SomeClass" 的日志记录器 -->
		<logger name="YourNamespace.SomeClass">
			<!-- 该记录器的日志级别为 DEBUG，表示只捕获 Debug 及更高级别的日志 -->
			<level value="DEBUG" />
		</logger>

	</log4net>
</configuration>
