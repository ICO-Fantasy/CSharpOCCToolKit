<Window
        WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OCCViewForm"
        xmlns:System="clr-namespace:System;assembly=System.Runtime" x:Class="TestWPF.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1400">
    <Window.Resources>
        <!-- 定义一个包含圆角边框的按钮模板 -->
        <ControlTemplate x:Key="RoundedButtonTemplate" TargetType="{x:Type Button}">
            <Border CornerRadius="1" BorderBrush="Black" BorderThickness="1" Margin="2,2,2,2" Padding="2,2,2,2">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </ControlTemplate>
    </Window.Resources>
    <Grid x:Name="main_grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="67*"/>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="918*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="canvas_grid" Grid.Row="2"/>
        <ToolBar Margin="0,0,0,918" Grid.RowSpan="3">
            <System:String xml:space="preserve">视图方向 </System:String>
            <!--使用自定义的按钮模板-->
            <Button Content="Front" Template="{StaticResource RoundedButtonTemplate}" Click="ForntView_Button_Click"/>
            <Button Content="Back" Template="{StaticResource RoundedButtonTemplate}" Click="BackView_Button_Click"/>
            <Button Content="Top" Template="{StaticResource RoundedButtonTemplate}" Click="TopView_Button_Click"/>
            <Button Content="Bottom" Template="{StaticResource RoundedButtonTemplate}" Click="BottomView_Button_Click"/>
            <Button Content="Left" Template="{StaticResource RoundedButtonTemplate}" Click="LeftView_Button_Click"/>
            <Button Content="Right" Template="{StaticResource RoundedButtonTemplate}" Click="RightView_Button_Click"/>
            <Separator/>
            <System:String xml:space="preserve"> 0 </System:String>
            <!-- 视图控制的两个按钮 -->
            <Button Content="Fit All" Template="{StaticResource RoundedButtonTemplate}" Click="FitAll_Button_Click"/>
            <Button Content="Shape" Template="{StaticResource RoundedButtonTemplate}" Click="Select_Shape_Button_Click"/>
            <Button Content="Face" Template="{StaticResource RoundedButtonTemplate}" Click="Select_Face_Button_Click"/>
            <Button Content="Wire" Template="{StaticResource RoundedButtonTemplate}" Click="Select_Wire_Button_Click"/>
            <Button Content="Vertex" Template="{StaticResource RoundedButtonTemplate}" Click="Select_Vertex_Button_Click"/>
            <Separator/>
            <System:String xml:space="preserve"> 显示模式 </System:String>
            <!-- 显示模式的两个按钮 -->
            <Button Content="W" Template="{StaticResource RoundedButtonTemplate}" Click="Wireframe_Button_Click"/>
            <Button Content="S" Template="{StaticResource RoundedButtonTemplate}" Click="Shading_Button_Click"/>
            <Separator/>
            <System:String xml:space="preserve"> Test </System:String>
            <!-- 显示模式的两个按钮 -->
            <Button Content="Box" Template="{StaticResource RoundedButtonTemplate}" Click="Test_Button_Click"  />
            <Button Content="导入" Template="{StaticResource RoundedButtonTemplate}" Click="Test_Input_Button_Click"/>
            <Button Content="BasePlate" Template="{StaticResource RoundedButtonTemplate}" Click="Test_BasePlate_Button_Click"/>
            <Button Content="MakeV" Template="{StaticResource RoundedButtonTemplate}" Click="Test_MakeV_Button_Click"/>
            <Button Content="ConnectV" Template="{StaticResource RoundedButtonTemplate}" Click="Test_ConnectV_Button_Click"/>
            <Button Content="测试2" Template="{StaticResource RoundedButtonTemplate}" Click="Test_input_test_2_Click"/>
            <Button Content="MakeV_2" Template="{StaticResource RoundedButtonTemplate}" Click="Test_MakeV_2_Button_Click"/>
        </ToolBar>
    </Grid>
</Window>
